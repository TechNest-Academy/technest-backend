  "definitions": {
    "Aluno": {
      "type": "object",
      "required": ["nome", "email", "idade", "turmaId"],
      "properties": {
        "id": {
          "type": "integer",
          "example": 1
        },
        "nome": {
          "type": "string",
          "example": "João da Silva"
        },
        "email": {
          "type": "string",
          "example": "joao@example.com"
        },
        "idade": {
          "type": "integer",
          "example": 20
        },
        "notaprimeiromodulo": {
          "type": "number",
          "example": 8.0
        },
        "notasegundomodulo": {
          "type": "number",
          "example": 7.5
        },
        "turmaId": {
          "type": "integer",
          "example": 1
        }
      }
    },
    "Turma": {
      "type": "object",
      "required": ["nome", "instrutor"],
      "properties": {
        "id": {
          "type": "integer",
          "example": 1
        },
        "nome": {
          "type": "string",
          "example": "Turma A"
        },
        "instrutor": {
          "type": "string",
          "example": "Instrutor X"
        }
      }
    },
    "Funcionario": {
      "type": "object",
      "required": ["nome", "email", "senha", "cargo"],
      "properties": {
        "id": {
          "type": "integer",
          "example": 1
        },
        "nome": {
          "type": "string",
          "example": "Maria da Silva"
        },
        "email": {
          "type": "string",
          "example": "maria@example.com"
        },
        "senha": {
          "type": "string",
          "example": "senha123"
        },
        "cargo": {
          "type": "string",
          "example": "Gerente"
        }
      }
    }
  }
